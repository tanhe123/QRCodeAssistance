<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdutlinux"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.sdutlinux.UserLogin"
            android:label="@string/title_activity_user_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sdutlinux.QRCodeAssistance"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.zxing.activity.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.sdutlinux.ShowInfoActivity"
            android:label="欢迎" >
        </activity>
        <activity
            android:name="com.sdutlinux.InputIssue"
            android:label="@string/title_activity_input_issue" >
        </activity>
        <activity
            android:name="com.sdutlinux.NoteActivity"
            android:label="@string/title_activity_note" >
        </activity>
   <!--      <activity
            android:name="com.sdutlinux.NoteEditActivity"
            android:label="@string/title_activity_note_edit" >
        </activity>-->
    	
        
         <uses-library android:name="android.test.runner" />
    </application>

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.sdutlinux" />
</manifest>